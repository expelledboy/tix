{
  "name": "tix",
  "version": "0.1.0",
  "description": "A tiny, TypeScript reimagining of Nix",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tix": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "prettier --check src/",
    "format": "prettier --write src/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "nix",
    "build",
    "reproducible",
    "package-manager",
    "content-addressed"
  ],
  "author": "Anthony Jackson",
  "license": "MIT"
}
